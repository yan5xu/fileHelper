{
    "openapi": "3.0.0",
    "info": {
      "title": "File Helper API",
      "description": "API for generating file trees and retrieving file contents",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "http://192.168.1.9:3003",
        "description": "Local development server"
      }
    ],
    "paths": {
      "/api/file-list": {
        "post": {
          "summary": "get a file list",
          "description": "get a list of files including Git tracked, modified, and untracked files",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "folderPath": {
                      "type": "string",
                      "description": "Path to the folder for which to generate the file list"
                    }
                  },
                  "required": ["folderPath"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "fileList": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "description": "List of file paths"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Bad request",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/api/file-tree": {
        "post": {
          "summary": "Get a full file tree",
          "description": "Get a complete file tree including Git tracked, modified, and untracked files",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "folderPath": {
                      "type": "string",
                      "description": "Path to the folder for which to generate the tree"
                    }
                  },
                  "required": ["folderPath"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "tree": {
                        "type": "string",
                        "description": "Generated file tree"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Bad request",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/api/file-content": {
        "post": {
          "summary": "Get file content",
          "description": "Retrieves the content of a specified file",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "filePath": {
                      "type": "string",
                      "description": "Path to the file to read"
                    }
                  },
                  "required": ["filePath"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "content": {
                        "type": "string",
                        "description": "Content of the file"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Bad request",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  